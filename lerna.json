{
	"$schema": "node_modules/lerna/schemas/lerna-schema.json",
	"useWorkspaces": true,
	"version": "independent",
	"packages": ["packages/*"],
	"ignoreChanges": [
		"**/CHANGELOG.md",
		"**/node_modules/**",
		"**/*.md"
	],
	"command": {
		"publish": {
			"registry": "https://npm.pkg.github.com"
		}
	}
}
